  <select id="queryConstartProBuildByProId" parameterType="java.lang.String" resultMap="BaseResultMap">
      SELECT t.`contract_remark`
       ,t.`contract_category`
      FROM tb_project_build t
      WHERE t.`pro_id` = #{proId}
  </select>

  <select id="queryZhaobiaoProByProId" resultMap="BaseResultMap" parameterType="java.lang.String">
      SELECT
        t.`pkid`
        ,t.`bid_price`
        ,t.`bid_remark`
        ,t.`b_org`
        ,'施工' AS bidType
        ,t.`pro_id`
      FROM tb_project_build t
      WHERE t.`pro_id` = #{proId}
      GROUP BY t.`bdxh`
  </select>

  <select id="queryProjectBuildByProId" resultMap="BaseResultMap" parameterType="java.lang.String">
      SELECT t.*
      FROM tb_project_build t
      WHERE t.`pro_id` = #{proId}
  </select>

    <select id="queryProjectBuildDetail" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
          t.*
          ,t1.pro_where
          ,t1.pro_type as proTypeMain
        FROM tb_project_build t
        left join tb_project t1 on t.pro_id = t1.pro_id
        WHERE 1=1
        <if test="proId != null and proId != ''">
          and t.`pro_id` = #{proId}
        </if>
        <if test="pkid != null and pkid != ''">
            AND t.`pkid` = #{pkid}
        </if>
    </select>

    <select id="queryProjectBuildCompany" parameterType="java.lang.String" resultType="java.util.Map">
        SELECT t.`b_org` AS comName
            ,t1.`org_code` AS orgCode
            ,(SELECT t3.display_name FROM mishu.`area` t3 WHERE t3.path = SUBSTRING_INDEX(t2.`path`,',',1)) AS province
            ,'施工单位' AS companyType
        FROM tb_project_build t
        LEFT JOIN tb_company t1 ON t.`b_org` = t1.`com_name`
        LEFT JOIN mishu.`area` t2 ON t1.`regis_address` = t2.`name`
        WHERE t.`pro_id` = #{proId}
        GROUP BY t1.`com_id`
    </select>

    <select id="queryProIdByComId" resultType="java.lang.String" parameterType="java.lang.String">
        select
          t.pro_id
        from tb_project_build t
        where t.com_id = #{comId}
        GROUP BY t.`pro_id`
    </select>

    <!--查询施工单位个数-->
    <select id="queryProjectBuildCount" parameterType="java.util.Map" resultType="java.lang.Integer">
         SELECT COUNT(1) AS total
          FROM tb_project_build t
          WHERE t.`pro_id` = #{proId}
    </select>
