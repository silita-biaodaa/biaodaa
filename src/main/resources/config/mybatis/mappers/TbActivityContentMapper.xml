<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.silita.biaodaa.dao.TbActivityContentMapper">

    <!--查询近期是否有活动-->
    <select id="queryActivity" resultType="java.lang.Integer">
        SELECT
        COUNT(1)
        FROM
        tb_activity_content t
        WHERE DATE(t.`start_date`) &lt;= DATE(NOW())
        AND DATE(t.`end_date`) &gt;= DATE(NOW())
    </select>
</mapper>