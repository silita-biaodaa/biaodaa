    <select id="queryProIdForCom" parameterType="java.util.Map" resultType="java.lang.String">
        SELECT t.`pro_id` AS proId
        FROM
        tb_project_company t
        WHERE t.pkid is not null
        <if test="comName != null and comName != ''">
            AND t.`com_name` = #{comName}
        </if>
        <!--<if test="orgCode != null and orgCode != ''">-->
            <!--AND t.`org_code` = #{orgCode}-->
        <!--</if>-->
--         GROUP BY t.`pro_id`
    </select>

    <select id="queryProComList" resultType="com.silita.biaodaa.model.TbProjectCompany" parameterType="java.util.Map">
        SELECT t.*
        FROM
          tb_project_company t
        WHERE t.pro_id = #{proId}
        and t.pid = #{pid}
        <if test="type != null and type != ''">
            and t.type = #{type}
        </if>
        <if test="roleList != null and roleList.size > 0">
            and
            <foreach collection="roleList" item="list" separator="or" close=")" open="(">
                t.role = #{list}
            </foreach>
        </if>
    </select>
</mapper>